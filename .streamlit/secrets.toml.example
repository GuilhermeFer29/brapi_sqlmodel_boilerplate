# Secrets para Streamlit Cloud
# No Streamlit Cloud, adicione estes valores em: Settings > Secrets

[environment]
env = "production"

[brapi]
mcp_url = "https://brapi.dev/api/mcp/mcp"
base_url = "https://brapi.dev"
api_key = "sua_chave_api_aqui"
token = "sua_chave_api_aqui"

[cache]
quote_ttl_seconds = 1800
crypto_ttl_seconds = 3600
currency_ttl_seconds = 3600
macro_ttl_seconds = 86400

[database]
redis_url = "redis://redis:6379/0"
mysql_url = "mysql+asyncmy://brapi_user:brapi_pass@mysql:3306/brapi_db"

[llm]
gemini_api_key = "sua_chave_gemini_aqui"

[backend]
base_url = "http://localhost:8000"
