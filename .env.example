# Ambiente
ENV=dev

# Configuração brapi.dev
BRAPI_BASE_URL=https://brapi.dev
BRAPI_TOKEN=seu_token_aqui
# Opcional: usar 4 ações gratuitas sem token
# BRAPI_TOKEN=

# Cache Redis
REDIS_URL=redis://redis:6379/0

# Banco de dados MySQL
DATABASE_URL=mysql+asyncmy://brapi_user:brapi_pass@mysql:3306/brapi_db

# TTL Cache (segundos)
CACHE_TTL_QUOTE_SECONDS=1800
CACHE_TTL_CRYPTO_SECONDS=3600
CACHE_TTL_CURRENCY_SECONDS=3600
CACHE_TTL_MACRO_SECONDS=86400
CACHE_TTL_CATALOG_SECONDS=300
CACHE_TTL_OHLCV_SECONDS=30

# Limites da API (Plano Free)
BRAPI_MAX_REQUESTS_PER_MONTH=15000
BRAPI_MAX_CONCURRENCY=3
BRAPI_TICKERS_PER_REQUEST=1

# Configuração de Jobs
JOB_DEFAULT_RANGE=3mo
JOB_DEFAULT_INTERVAL=1d
JOB_DEFAULT_CONCURRENCY=3

# Logging
LOG_LEVEL=INFO

# Configurações adicionais
# BACKEND_BASE_URL=http://localhost:8000
# GEMINI_API_KEY=sua_chave_gemini_aqui
